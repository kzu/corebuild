<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="15.0" DefaultTargets="SelfUpdate" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<ItemGroup>
		<SelfUpdate Include="$(MSBuildThisFileDirectory)*.props" />
		<SelfUpdate Include="$(MSBuildThisFileDirectory)*.targets" />
	</ItemGroup>
	
	<Target Name="SelfUpdate" Returns="@(_SelfUpdated)">
		<MSBuild Projects="@(SelfUpdate)" Targets="SelfUpdate">
			<Output TaskParameter="TargetOutputs" ItemName="_SelfUpdated" />
		</MSBuild>
	</Target>
</Project>