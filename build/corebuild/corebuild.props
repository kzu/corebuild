<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<PropertyGroup>
		<!-- Instruct NuGet to perform a NETCore-like restore -->
		<TargetFramework>netcore50</TargetFramework>
		<!-- Specify a well-known usually ignored directory for the generated targets -->
		<RestoreOutputPath>$(MSBuildThisFileDirectory).nuget</RestoreOutputPath>
	</PropertyGroup>

	<!-- NuGet generated targets -->
	<Import Project="$(RestoreOutputPath)\$(MSBuildProjectFile).nuget.g.props" 
			Condition="Exists('$(RestoreOutputPath)\$(MSBuildProjectFile).nuget.g.props') And '$(SelfUpdating)' != 'true'" />

	<!-- For self-updating -->
	<Import Project="updater.targets" Condition="'$(UpdaterImported)' != 'true'" />
	<PropertyGroup>
		<Etag>721c782777ee673cab2113b081dadca22115f4c2</Etag>
		<_Self>$(MSBuildThisFileFullPath)</_Self>
		<_SelfUrl>$(_SelfBaseUrl)/$(MSBuildThisFilename)$(MSBuildThisFileExtension)</_SelfUrl>
	</PropertyGroup>
</Project>