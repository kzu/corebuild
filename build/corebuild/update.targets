<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="15.0" DefaultTargets="Update" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<ItemGroup>
		<_Updatable Include="$(MSBuildThisFileDirectory)corebuild.props" />
		<_Updatable Include="$(MSBuildThisFileDirectory)corebuild.targets" />
	</ItemGroup>
	
	<Target Name="Update" Returns="@(_Updated)">
		<MSBuild Projects="$(MSBuildProjectFullPath)" Properties="UpdateTarget=%(_Updatable.FullPath);IsUpdating=true" Targets="Update">
			<Output TaskParameter="TargetOutputs" ItemName="_Updated" />
		</MSBuild>
	</Target>
</Project>